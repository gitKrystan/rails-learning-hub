<div class="page-header">
  <h1>Edit Chapter: <%= @chapter.name %></h1>
</div>

<%= render 'form' %>

<% content_for(:adminbar) do %>
  <li><%= link_to 'Cancel', @chapter %></li>
  <li>
    <%= link_to @chapter, method: :delete, data: { confirm: 'Are you sure?' } do %>
      Delete <%= @chapter.name %>
    <% end %>
  </li>
<% end %>
