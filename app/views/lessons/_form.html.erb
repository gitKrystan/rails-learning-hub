<%= render 'layouts/errors', object: @lesson %>

<%= form_for(@lesson) do |f| %>
  <div class="form-group">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :number , class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.number_field :number, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :content , class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :content, rows: 20, class: 'form-control' %>
    </div>
  </div>
  <% if @section_options_array %>
    <div class="form-group">
      <%= f.label :section , class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.select('section_id', @section_options_array,
                     {prompt: 'Select Chapter'}, {class: 'form-control'}) %>
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-success' %>
    </div>
  </div>
<% end %>
