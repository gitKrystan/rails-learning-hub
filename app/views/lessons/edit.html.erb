<div class="page-header">
  <h1>Edit Section: <%= @lesson.name %></h1>
</div>

<%= render 'form' %>

<% content_for(:adminbar) do %>
  <li><%= link_to 'Cancel', @lesson %></li>
  <li>
    <%= link_to @lesson, method: :delete, data: { confirm: 'Are you sure?' } do %>
      Delete <%= @lesson.name %>
    <% end %>
  </li>
<% end %>
