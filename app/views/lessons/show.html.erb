<% content_for(:navbar) do %>
  <% if @previous_lesson %>
    <li>
      <%= link_to @previous_lesson do %>
        <span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>
        Previous Lesson: <%= @previous_lesson.name %>
      <% end %>
    </li>
  <% end %>
  <% if @next_lesson %>
    <li>
      <%= link_to @next_lesson do %>
        Next Lesson: <%= @next_lesson.name %>
        <span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span>
      <% end %>
    </li>
  <% end %>
<% end %>

<div class="page-header">
  <h1>
    <% if @lesson.section %>
      <% if @lesson.section.chapter %>
        <%= @lesson.section.chapter.name %> |
      <% end %>
      <%= @lesson.section.name %> |
    <% end %>
    <%= @lesson.name %>
  </h1>
</div>

<% if @content_markdown %>
  <div class="content-markdown">
    <%= @content_markdown %>
  </div>
<% end %>

<% content_for(:adminbar) do %>
  <li>
    <%= link_to edit_lesson_path(@lesson) do %>
      Edit <%= @lesson.name %>
    <% end %>
  </li>
<% end %>
