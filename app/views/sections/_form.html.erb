<%= render 'layouts/errors', object: @section %>

<%= form_for @section, html: {class: 'form-horizontal'} do |f| %>
  <div class="form-group">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :number , class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.number_field :number, class: 'form-control' %>
    </div>
  </div>
  <% if @chapter_options_array %>
    <div class="form-group">
      <%= f.label :chapter , class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.select('chapter_id', @chapter_options_array,
                     {prompt: 'Select Chapter'}, {class: 'form-control'}) %>
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-success' %>
    </div>
  </div>
<% end %>
